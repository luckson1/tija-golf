enum aal_level {
  aal1
  aal2
  aal3

  @@schema("auth")
}

enum code_challenge_method {
  s256
  plain

  @@schema("auth")
}

enum factor_status {
  unverified
  verified

  @@schema("auth")
}

enum factor_type {
  totp
  webauthn

  @@schema("auth")
}

model Organization {
  id                 String               @id @default(cuid())
  name               String
  location           String
  image              String
  Tee                Tee[]
  Event              Event[]
  Class              Class[]
  Tournament         Tournament[]
  Payment            Payment[]
  OrganizationMember OrganizationMember[]

  @@schema("auth")
}

model OrganizationMember {
  user           users        @relation(fields: [usersId], references: [id])
  usersId        String       @db.Uuid
  organisation   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@id([usersId, organizationId])
  @@schema("auth")
}

model Booking {
  id           String   @id @default(cuid())
  user         users    @relation(fields: [usersId], references: [id])
  teeId        String?
  eventId      String?
  classId      String?
  tournamentId String?
  bookingREf Int @default(autoincrement())
  bookingDate  DateTime @default(now())

  tee        Tee?        @relation(fields: [teeId], references: [id])
  event      Event?      @relation(fields: [eventId], references: [id])
  class      Class?      @relation(fields: [classId], references: [id])
  tournament Tournament? @relation(fields: [tournamentId], references: [id])
  payments   Payment[]
  usersId    String      @db.Uuid
  status  PaymentStatus @default(Pending)

  @@schema("auth")
}

model Tee {
  id             String       @id @default(cuid())
  holes          String         @default("9 holes")
  kit             String     @default("No")
  isExistingGame  String     @default("No")
  bookings       Booking[]
  startDate      DateTime
  payments       Payment[]
  organisation   Organization @relation(fields: [organizationId], references: [id])
  organizationId String

  @@schema("auth")
}

model Event {
  id             String       @id @default(cuid())
  description    String
  bookings       Booking[]
  startDate      DateTime
  endDate        DateTime
  organisation   Organization @relation(fields: [organizationId], references: [id])
  payments       Payment[]
  organizationId String

  @@schema("auth")
}

model Class {
  id             String          @id @default(cuid())
  cohort         Int
  description    String
  bookings       Booking[]
  startDate      DateTime // Overall start date of the class
  endDate        DateTime // Overall end date of the class
  organizationId String
  organisation   Organization    @relation(fields: [organizationId], references: [id])
  schedules      ClassSchedule[] // Specific session schedules
  payments       Payment[]

  @@schema("auth")
}

model ClassSchedule {
  id        String    @id @default(cuid())
  classId   String
  dayOfWeek DayOfWeek
  startTime String // Specific start time of each session (e.g., "15:00" for 3 PM)
  endTime   String // Specific end time of each session (e.g., "17:00" for 5 PM)
  class     Class     @relation(fields: [classId], references: [id])

  @@schema("auth")
}

enum DayOfWeek {
  Monday
  Tuesday
  Wednesday
  Thursday
  Friday
  Saturday
  Sunday

  @@schema("auth")
}

model Tournament {
  id             String       @id @default(cuid())
  name           String
  description    String
  bookings       Booking[]
  startDate      DateTime
  endDate        DateTime
  organisation   Organization @relation(fields: [organizationId], references: [id])
  payments       Payment[]
  organizationId String

  @@schema("auth")
}

model Profile {
  id          String   @id @default(cuid())
  name        String
  email       String
  phoneNumber String
  level       String   @default("Beginner")
  user        users    @relation(fields: [usersId], references: [id])
  usersId     String   @unique @db.Uuid
  gender      Gender
  dateOfBirth DateTime
  cohort      Int

  @@schema("auth")
}

enum Gender {
  male
  female

  @@schema("auth")
}

model Payment {
  id               String        @id @default(cuid())
  bookingId        String
  productServiceId String
  user             users         @relation(fields: [usersId], references: [id])
  amount           Float
  status           PaymentStatus
  paymentDate      DateTime      @default(now())
  paymentMethod    String

  booking        Booking      @relation(fields: [bookingId], references: [id])
  Tee            Tee?         @relation(fields: [teeId], references: [id])
  teeId          String?
  Event          Event?       @relation(fields: [eventId], references: [id])
  eventId        String?
  Class          Class?       @relation(fields: [classId], references: [id])
  classId        String?
  Tournament     Tournament?  @relation(fields: [tournamentId], references: [id])
  tournamentId   String?
  organisation   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  usersId        String       @db.Uuid

  @@schema("auth")
}

enum PaymentStatus {
  Pending
  Completed
  Failed
  Refunded

  @@schema("auth")
}

enum BookingStatus {
  Pending
  Confirmed
  Completed
  Failed
  Refunded

  @@schema("auth")
}
